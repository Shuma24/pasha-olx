generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ApiAdmin {
  id          Int             @id @default(autoincrement())
  login       String
  password    String
  olxSettings OlxCredetnials?
}

model OlxCredetnials {
  id              Int      @id @default(autoincrement())
  olxToken        String
  olxRefreshToken String
  expires_in      String
  admin           ApiAdmin @relation(fields: [adminId], references: [id])
  adminId         Int      @unique
}

model OlxOauth {
  id            Int    @id @default(autoincrement())
  client_id     String
  client_secret String
}

model Tires {
  id          Int       @id @default(autoincrement())
  images      Images[]
  name        String
  description String
  price       Int
  size        String
  quantity    Int
  type        String
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
}

model Images {
  id        Int       @id @default(autoincrement())
  Tires     Tires?    @relation(fields: [tiresId], references: [id], onDelete: Cascade)
  tiresId   Int?
  url       String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

model Admins {
  id         Int @id @default(autoincrement())
  TelegramID Int
}

model BlackList {
  id         Int @id @default(autoincrement())
  TelegramID Int
}
